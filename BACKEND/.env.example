# Application Settings
APP_NAME=3D Portfolio API
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# Database Configuration (provided by Render automatically)
DATABASE_URL=postgresql://postgres:password@localhost:5432/portfolio_db

# Security - CHANGE THIS! Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (comma-separated) - set to your production frontend domain
BACKEND_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# Email Configuration (Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAILS_FROM_EMAIL=your-email@gmail.com
# EMAILS_FROM_NAME=3D Portfolio

# Admin User (for initial setup - remove after first deploy)
FIRST_SUPERUSER_EMAIL=admin@example.com
FIRST_SUPERUSER_PASSWORD=change-this-to-a-strong-password
FIRST_SUPERUSER_NAME=Admin User
